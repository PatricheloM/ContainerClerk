<Window x:Class="ContainerClerk.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Docker Login" Height="450" Width="450">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- URL Input -->
            <Label>RegistryURL:</Label>
            <TextBox Name="UrlTextBox" Width="250" Margin="10" />
            
            <!-- Username Input -->
            <Label>Username:</Label>
            <TextBox Name="UsernameTextBox" Width="250" Margin="10" />
            
            <!-- Password Input -->
            <Label>Password:</Label>
            <PasswordBox Name="PasswordBox" Width="250" Margin="10" />
            
            <!-- Login Button -->
            <Button Name="LoginButton" Content="Login" Width="250" Margin="10" Click="LoginButton_Click"/>
            
            <!-- Status Text -->
            <TextBlock Name="StatusText" Width="250" Margin="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
